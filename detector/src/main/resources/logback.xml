<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <pattern>
                    <pattern>
                        {
                        "level": "%level",
                        "logger": "%logger",
                        "message": "%msg",
                        "op": "%mdc{op}",
                        "rid": "%mdc{rid}",
                        "status": "%mdc{status}",
                        "stacktrace": "%xException{full}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <logger name="org.zalando.logbook" level="trace" additivity="false">-->
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="ru.spbu.detector.detection.DetectionAlgorithm" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>